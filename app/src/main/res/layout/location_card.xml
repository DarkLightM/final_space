<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quoteCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin">

    <ImageView
        android:id="@+id/locationPicture"
        android:layout_width="@dimen/default_picture_size"
        android:layout_height="@dimen/default_picture_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </ImageView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/locationName"
        android:layout_width="@dimen/default_picture_size"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/locationPicture"
        app:layout_constraintRight_toRightOf="@id/locationPicture"
        app:layout_constraintTop_toBottomOf="@id/locationPicture"
        android:textStyle="bold"
        android:textSize="@dimen/title"
        android:textColor="@color/dark_blue"
        android:textAlignment="center"
        tools:text="Location">
    </com.google.android.material.textview.MaterialTextView>

</androidx.constraintlayout.widget.ConstraintLayout>